<%= form_for @micropost do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: 'Compose new micropost...', class: 'js-characters-to-count js-characters-to-count-1' %>
	</div>
	<div class="js-character-counter js-character-counter-1">140 characters</div>
	<%= f.submit 'Post', class: 'btn btn-large btn-primary' %>
<% end %>